<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="check_wamas_file_wizard_form" model="ir.ui.view">
        <field name="name">check.wamas.file.wizard.form</field>
        <field name="model">check.wamas.file.wizard</field>
        <field name="arch" type="xml">
            <form string="Check WAMAS File">
                <group>
                    <field name="wamas_file" filename="wamas_filename" />
                    <field name="wamas_filename" invisible="1" />
                    <field
                        name="output"
                        attrs="{'invisible': [('output', '=', False)], 'readonly':[('output', '!=', False)]}"
                    />
                </group>
                <footer>
                    <button
                        name="btn_check"
                        type="object"
                        class="oe_highlight"
                        string="Check"
                    />
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

    <record id="check_wamas_file_wizard_action" model="ir.actions.act_window">
        <field name="name">Check WAMAS File</field>
        <field name="res_model">check.wamas.file.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

</odoo>
